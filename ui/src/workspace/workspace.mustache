<div class="notification" data-bind="visible: isNotificationVisible"></div>

<div class="workspace-main">

    <!-- Navigation -->
    <nav class="workspace-nav" data-bind="visible: isNavigationVisible, click: handleNavigationClick">
        <ul>
            <li data-panel="panel-instance" class="state-active">Instances</li>
            <li data-panel="panel-plugin">Plugins</li>
            <li data-panel="panel-store">Store</li>
        </ul>
    </nav>

    <div class="workspace-drop" data-bind="visible: isNavigationVisible">
        <div class="drop-panel" data-view="fileUploadView"></div>
    </div>

    <!-- Panels -->
    <div class="workspace-panels">
        <div class="panel panel-instance"></div>
        <div class="panel panel-instance-edit"></div>
        <div class="panel panel-plugin"></div>
        <div class="panel panel-plugin-edit"></div>
        <div class="panel panel-log"></div>
        <div class="panel panel-store"></div>
        <div class="panel panel-storeEntry-edit"></div>
    </div>

</div>
